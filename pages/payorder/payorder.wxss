page {
  background-color: #eee;
  padding: 24rpx;
  box-sizing: border-box;
}
.payorder .reminder{
  font-size:30rpx;
  align-items: center;
  justify-content: space-between;
  background-color:lemonchiffon;
  border-radius:24rpx;
  color:chocolate;
  padding:1em;

}


.payorder .restaurant {
  font-size: 26rpx;
  color: #333;
  margin-top:1em;
}
.payorder .count {
  line-height: 75rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
}
.payorder .orderList {
  background-color: #fff;
  margin: 0 50rpx;
  position: relative;
}
.payorder .orderList .time {
  position: relative;
  margin: 0 20rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999;
  border-bottom: 1rpx dashed #eee;
}
.payorder .orderList .time::after,
.payorder .orderList .time::before {
  content: '';
  display: block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background-color: #eee;
  border-radius: 50%;
  top: 60rpx;
}
.payorder .orderList .time::before { 
  left: -37rpx;
}
.payorder .orderList .time::after {
  right: -37rpx;
}
.payorder .orderList .orderList-item-top,
.payorder .orderList .orderList-item-one {
  display: flex;
  justify-content: space-around;
}
.payorder .orderList .orderList-item-top > text,
.payorder .orderList .orderList-item-one > text {
  width: 33.33%;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  line-height: 60rpx;
}
.payorder .orderList .bottom {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx dashed #eee;
  line-height: 70rpx;
  font-size: 24rpx;
  padding: 0 50rpx;
  padding-right: 70rpx;
}
.payorder .orderList::after,
.payorder .orderList::before {
  content: '';
  position: absolute;
  top: 0;
}
.payorder .orderList::after {
  width: 110%;
  height: 10rpx;
  left: -30rpx;
  border-radius: 5rpx;
  background-color: #d4d6d8;
  z-index: 99;
}
.payorder .orderList::before {
  top: 7rpx;
  width: 105%;
  height: 5rpx;
  left: -15rpx;
  border-radius: 5rpx;
  background-color: #adb3b9;
  z-index: 100;
}
